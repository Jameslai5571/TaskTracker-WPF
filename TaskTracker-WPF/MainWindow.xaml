<Window x:Class="TaskTracker_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTracker_WPF" 
        xmlns:views="clr-namespace:TaskTracker_WPF.Views"
        xmlns:vms="clr-namespace:TaskTracker_WPF.ViewModels"
        mc:Ignorable="d"
        Title="Task Tracker" 
        FontSize="14"
        Height="450" 
        Width="800">
    <Grid Margin="20 10 20 10" MaxWidth="800"> <!--properties applied to all view-->
        <!--manually setting view with view models-->
        <!--eTaskView DataContext="{Binding CurrentViewModel}"/>-->
        <!--map view & viewmodel together, so that it can be retrieved accordingly based on the currentViewModel-->
        <Grid.Resources>
            <DataTemplate
                DataType="{x:Type vms:TaskListingViewModel}">
                <views:TaskListingView/>
            </DataTemplate>
            <DataTemplate
                DataType="{x:Type vms:CreateTaskViewModel}">
                <views:CreateTaskView/>
            </DataTemplate>
            <DataTemplate
                DataType="{x:Type vms:UpdateTaskViewModel}">
                <views:UpdateTaskView/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>
        <!--based off content of the CurrentViewModel, it will go to the above datatemplate to search for the corresponding view to display-->

    </Grid>
</Window>
