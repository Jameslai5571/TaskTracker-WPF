<Application x:Class="TaskTracker_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskTracker_WPF">
    <!--StartupUri="MainWindow.xaml" || manualy startup done in App.xaml.cs--> 
    <Application.Resources> <!--default properties applied on the targetted type-->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10 5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="2"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="Header">
            <Setter Property="FontSize" Value="24"/>
        </Style>
    </Application.Resources>
</Application>
